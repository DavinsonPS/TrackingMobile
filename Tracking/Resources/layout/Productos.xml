<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Home"
        android:layout_marginLeft="10dp"
        android:layout_width="83.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnHome" />

    <TextView
        android:text="PRODUCTS"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitleApp"/>

    <LinearLayout
        android:background="#086A87"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Code"
            android:layout_marginLeft="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="93.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleCode" />

        <TextView
            android:text="Total"
            android:layout_marginLeft="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="93.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleTotal" />

        <TextView
            android:text="Proveedor"
            android:layout_marginLeft="4.0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="82.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleProv" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_width="99.5dp"
            android:layout_height="31.5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtCode" />

        <EditText
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:layout_width="62.5dp"
            android:layout_height="31.5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtTotal" />

        <EditText
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:layout_width="115.5dp"
            android:layout_height="31.5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtProv" />

    </LinearLayout>
    
    <LinearLayout
        android:background="#086A87"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name"
            android:layout_marginLeft="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="93.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleName" />

        <TextView
            android:text="Date"
            android:layout_marginLeft="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="93.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleFecha" />

        <TextView
            android:text="Observations"
            android:layout_marginLeft="4.0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="82.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleObs" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_width="99.5dp"
            android:layout_height="31.5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtName" />

        <EditText
            android:inputType="date"
            android:layout_marginLeft="30dp"
            android:layout_width="62.5dp"
            android:layout_height="31.5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtDate" />

        <EditText
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:layout_width="115.5dp"
            android:layout_height="31.5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtObs" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#086A87"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:text="Delete"
            android:layout_marginLeft="100dp"
            android:layout_width="83.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete" />

        <Button
            android:text="Add"
            android:layout_marginLeft="10dp"
            android:layout_width="83.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd" />
    </LinearLayout>

    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
      
        android:id="@+id/tableLayout2">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nit"
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Nombre"
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView2"
                android:layout_width="122.5dp"
                android:layout_height="34.5dp" />
            <TextView
                android:text="DescripciÃ³n"
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView3"
                android:layout_width="170.5dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView4"
                android:layout_width="65.5dp"
                android:layout_height="wrap_content" />
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView9"
                android:layout_width="124.0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView9"
                android:layout_width="124.0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        
    </TableLayout>

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1" />

    <Button
        android:text="Acept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAcept" />



</LinearLayout>
