<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Home"
        android:layout_marginLeft="10dp"
        android:layout_width="83.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnHome" />


    <TextView
        android:text="PURCHASE ORDER"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitleApp"
            />

    <TextView
        android:text="Nit Proveedor"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleName" />

    <EditText
        android:inputType="number"
        android:layout_marginLeft="30dp"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtNitProveedor" />

    <TextView
        android:text="# OC"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleOC" />

    <EditText
        android:inputType="number"
        android:layout_marginLeft="30dp"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/txtOC" />

    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/tableLayout1">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Product"
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Total"
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView2"
                android:layout_width="122.5dp"
                android:layout_height="34.5dp" />
            <TextView
                android:text="Description"
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView3"
                android:layout_width="170.5dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView4"
                android:layout_width="65.5dp"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView9"
                android:layout_width="124.0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                p4:placeholder="true"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/textView9"
                android:layout_width="124.0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        
    </TableLayout>

    <Button
        android:text="Acept"
        android:layout_marginLeft="105dp"
        android:layout_width="167.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSend" />

    <Button
        android:text="Cancel"
        android:layout_marginLeft="105dp"
        android:background="#FF0000"
        android:layout_width="169.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel" />

</LinearLayout>
