<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="WE CONTACT!"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitleApp3"
            />

    <TextView
        android:text="Complete Name"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleCName" />

    <EditText
        android:inputType="text"
        android:layout_marginLeft="30dp"
        android:layout_width="320.0dp"
        android:layout_height="36.0dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/txtCompleteName" />

    <TextView
        android:text="Cell Phone Number"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitlePhone" />

    <EditText
        android:inputType="phone"
        android:layout_marginLeft="30dp"
        android:layout_width="320.0dp"
        android:layout_height="37.5dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/txtCelPhone" />

    <TextView
        android:text="E-Mail"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleEmail" />

    <EditText
        android:inputType="textEmailAddress"
        android:layout_marginLeft="30dp"
        android:layout_width="320.0dp"
        android:layout_height="38.5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtEmail" />

    <TextView
        android:text="Message"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleMessage" />

    <EditText
        android:inputType="textMultiLine"
        android:layout_marginLeft="15dp"
        android:layout_width="351.5dp"
        android:layout_height="87.0dp"
        android:id="@+id/txtMessage"
        android:layout_marginRight="0.0dp" />
    <Button
        android:text="Send"
        android:layout_marginLeft="105dp"
        android:layout_width="167.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSend" />

    <Button
        android:text="Cancel"
        android:layout_marginLeft="105dp"
        android:background="#FF0000"
        android:layout_width="169.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel" />


</LinearLayout>
